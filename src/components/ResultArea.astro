---

interface Props {
  aspect_ratio: string
}

const { aspect_ratio } = Astro.props
---

<article>
    
    <div>
        <img 
            style={{ aspectRatio: aspect_ratio }} 
            src="https://images.squarespace-cdn.com/content/v1/51c30e7ce4b089f545ce58b3/1372097481530-PTVEWDS947B6KPROUGY4/Beagle1.jpg" alt="">
    </div>

</article>

<style>
    article {
        background-color: blue;
        height: calc(100% - 20px);
        width: calc(35%);
        margin: 10px;
        padding: 10px;
        display: flex;
        align-items: center;
    }

    img {
        aspect-ratio: var(aspect_ratio);
        overflow: hidden;
        max-width: 100%;
        max-height: 100%;
    }

    
</style>